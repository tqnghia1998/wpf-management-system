<Page x:Class="Management_System.NewBillPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Management_System"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewBillPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--Nút backward-->
        <Button
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderBrush="#303030"
            VerticalAlignment="Top"
            Height="25" Width="25"
            Command="{x:Static NavigationCommands.BrowseBack}"
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
            <materialDesign:PackIcon
                Kind="KeyboardArrowLeft"
                Height="20"
                Width="20" />
        </Button>

        <!--Nút forward-->
        <Button
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderBrush="#303030"
            VerticalAlignment="Top"
            Height="25" Width="25"
            Margin="28,0,0,0"
            Command="{x:Static NavigationCommands.BrowseForward}"
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
            <materialDesign:PackIcon
                Kind="KeyboardArrowRight"
                Height="20"
                Width="20" />
        </Button>

        <!--Tiêu đề-->
        <Label Content="TẠO ĐƠN HÀNG MỚI"
               FontFamily="Sitka Subheading"
               Height="25"
               FontSize="22"
               Padding="0"
               FontWeight="Bold"
               VerticalAlignment="Top"
               Name="Title"
               HorizontalAlignment="Center" Grid.Column="1"/>

        <!--Tên khách hàng-->
        <TextBox Grid.Row="1"
                 materialDesign:HintAssist.Hint="Tên khách hàng"
                 Width="220"
                 FontSize="15"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editCustomerName"/>

        <!--SDT-->
        <TextBox Grid.Row="2"
                 materialDesign:HintAssist.Hint="SDT"
                 Width="220"
                 FontSize="15"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editCustomerPhone"/>

        <!--Mã sản phẩm-->
        <TextBox Grid.Row="3"
                 materialDesign:HintAssist.Hint="Chọn sản phẩm"
                 Width="220"
                 Foreground="Red"
                 FontSize="15"
                 IsReadOnly="True"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 PreviewMouseUp="EditProductId_MouseUp"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editProductId"/>

        <!--Số lượng mua-->
        <TextBox Grid.Row="1" Grid.Column="1"
                 materialDesign:HintAssist.Hint="Số lượng"
                 Width="100"
                 Margin="0,0,120,0"
                 FontSize="15"
                 TextChanged="EditNumberBuy_TextChanged"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 IsEnabled="{Binding ElementName=editProductId, Path=Text.Length}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editNumberBuy"/>

        <!--Số lượng được tặng-->
        <TextBox Grid.Row="1" Grid.Column="1"
                 materialDesign:HintAssist.Hint="Được tặng"
                 Width="100"
                 Margin="120,0,0,0"
                 FontSize="15"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 IsReadOnly="True"
                 IsEnabled="{Binding ElementName=editProductId, Path=Text.Length}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editNumberGet"/>

        <!--Giá gốc-->
        <TextBox Grid.Row="2" Grid.Column="1"
                 Width="100"
                 Margin="0,0,120,0"
                 FontSize="15"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 IsReadOnly="True"
                 IsEnabled="{Binding ElementName=editProductId, Path=Text.Length}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editOriginalPrice">
            <materialDesign:HintAssist.Hint>
                <TextBlock>
                    <Bold>Giá gốc</Bold> (₫)
                </TextBlock>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!--Giá bán-->
        <TextBox Grid.Row="2" Grid.Column="1"
                 Width="100"
                 Margin="120,0,0,0"
                 FontSize="15"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 IsReadOnly="True"
                 IsEnabled="{Binding ElementName=editProductId, Path=Text.Length}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editSellPrice">
            <materialDesign:HintAssist.Hint>
                <TextBlock>
                    <Bold>Giá bán</Bold> (₫)
                </TextBlock>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!--Lựa chọn thêm sự kiện-->
        <Label Grid.Column="1" Grid.Row="3"
               Margin="50,0,25,0"
               Content="Xem sự kiện khuyến mãi"
               FontSize="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               FontFamily="Sitka Subheading"
               FontWeight="Bold"/>
        <Button Grid.Column="1" Grid.Row="3"
                Width="25" Height="25"
                Margin="0,0,195,5"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                Click="BtnAddEvent_Click"
                Name="btnAddEvent">
            <materialDesign:PackIcon Kind="Add" Height="20" Width="20"/>
        </Button>

        <!--Danh sách khuyến mại được áp dụng-->
        <ListView Name="listEvent" Grid.Row="1" Grid.Column="2" Grid.RowSpan="4"
                  FontFamily="Sitka Subheading"
                  FontSize="13"
                  Margin="5,6,0,0"
                  Foreground="Black"
                  PreviewMouseLeftButtonUp="ListEvent_PreviewMouseLeftButtonUp"
                  HorizontalAlignment="Left">

            <ListView.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Text}"/>
                </Style>
                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="Margin" Value="2,50,0,8" />
                    <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Track IsDirectionReversed="true" Focusable="false">
                                    <Track.Thumb>
                                        <Thumb Width="8" Background="Green"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" />
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" />
                                    </Track.DecreaseRepeatButton>
                                </Track>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.Resources>

            <!--Thiết kế các cột-->
            <ListView.View>
                <GridView>
                    <!--Cột Tên khuyến mãi-->
                    <GridViewColumn
                        Width="225"
                        DisplayMemberBinding="{Binding onScreen}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Border>
                                    <Border.Effect>
                                        <DropShadowEffect
                                            Color="White"
                                            Direction="270"
                                            ShadowDepth="1"
                                            BlurRadius="5"/>
                                    </Border.Effect>
                                    <Label Content="KHUYẾN MÃI ÁP DỤNG"
                                       Padding="1"
                                       FontSize="15"
                                       Foreground="Black"
                                       FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>

        <!--Progressbar loading-->
        <ProgressBar Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="4" Grid.Column="2"
                     Width="25" Height="25"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     x:Name="ProgressBar">
            <ProgressBar.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Value" From="0" To="100" Duration="0:0:1" RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </ProgressBar.Triggers>
        </ProgressBar>

        <!--Hai hình thức thanh toán-->
        <RadioButton Grid.Row="4" VerticalAlignment="Bottom"
                     HorizontalAlignment="Center" Content="THANH TOÁN TRỰC TIẾP"
                     FontFamily="Sitka Subheading"
                     FontSize="15"
                     Checked="Radio_Checked"
                     Margin="0,0,30,0"
                     FontWeight="Bold"
                     GroupName="Payment"
                     IsChecked="True"
                     Name="rdoGoToShop"/>
        <RadioButton Grid.Row="4" Grid.Column="1" VerticalAlignment="Bottom"
                     Content="GIAO HÀNG TẬN NƠI"
                     HorizontalAlignment="Center"
                     FontFamily="Sitka Subheading"
                     Checked="Radio_Checked"
                     FontSize="15"
                     Margin="0,0,60,0"
                     FontWeight="Bold"
                     GroupName="Payment"
                     Name="rdoShip"/>

        <!--Số tiền khách hàng đưa-->
        <TextBox Grid.Row="5"
                 Width="220"
                 FontSize="15"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 VerticalAlignment="Center"
                 FontWeight="Bold"
                 TextChanged="CountExchange"
                 IsEnabled="{Binding IsChecked, ElementName=rdoGoToShop}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editMoneyTaken">
            <materialDesign:HintAssist.Hint>
                <TextBlock>
                    <Bold>Số tiền khách đưa</Bold> (₫)
                </TextBlock>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!--Số tiền trả lại-->
        <TextBox Grid.Row="6"
                 Width="220"
                 FontSize="15"
                 IsEnabled="{Binding IsChecked, ElementName=rdoGoToShop}"
                 IsReadOnly="True"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 VerticalAlignment="Center"
                 FontWeight="Bold"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editMoneyExchange">
            <materialDesign:HintAssist.Hint>
                <TextBlock>
                    <Bold>Số tiền trả lại</Bold> (₫)
                </TextBlock>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!--Địa chỉ nhận hàng-->
        <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                 Width="485"
                 Margin="25,0,0,0"
                 FontSize="15"
                 HorizontalAlignment="Left"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 VerticalAlignment="Center"
                 FontWeight="Bold"
                 IsEnabled="{Binding IsChecked, ElementName=rdoShip}"
                 materialDesign:HintAssist.Hint="Địa chỉ nhận hàng"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editAddress"/>

        <!--Số tiền cọc đã chuyển khoản-->
        <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                 Width="130"
                 FontSize="15"
                 TextChanged="CountMoneyWillGet"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="25,0,0,0"
                 FontWeight="Bold"
                 IsEnabled="{Binding IsChecked, ElementName=rdoShip}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editDeposit">
            <materialDesign:HintAssist.Hint>
                <TextBlock>
                    <Bold>Tiền cọc</Bold> (₫)
                </TextBlock>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!--Phí ship-->
        <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                 Width="130"
                 FontSize="15"
                 TextChanged="CountMoneyWillGet"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="200,0,0,0"
                 FontWeight="Bold"
                 IsEnabled="{Binding IsChecked, ElementName=rdoShip}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editShipCost">
            <materialDesign:HintAssist.Hint>
                <TextBlock>
                    <Bold>Phí ship</Bold> (₫)
                </TextBlock>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!--Số tiền sẽ thu-->
        <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                 Width="130"
                 FontSize="15"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="380,0,0,0"
                 FontWeight="Bold"
                 IsReadOnly="True"
                 IsEnabled="{Binding IsChecked, ElementName=rdoShip}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editMoneyWillGet">
            <materialDesign:HintAssist.Hint>
                <TextBlock>
                    <Bold>Sẽ thu</Bold> (₫)
                </TextBlock>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!--Button xác nhận-->
        <Button Grid.Column="2" Grid.Row="7"
                Width="100" Content="Xác nhận"
                FontWeight="Bold"
                Foreground="White"
                Background="ForestGreen"
                FontSize="15"
                FontFamily="Sitka Subheading"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="BtnConfirm_Click"
                Name="btnConfirm"/>

        <!--Button xem lịch sử-->
        <Button Grid.Column="1" Grid.Row="7"
                Width="180" Content="Danh sách hóa đơn"
                FontWeight="Bold"
                Foreground="White"
                Background="ForestGreen"
                FontSize="15"
                FontFamily="Sitka Subheading"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="BtnHistory_Click"
                Name="btnHistory"/>

        <!--Button làm mới-->
        <Button Grid.Row="7"
                Width="100" Content="Làm mới"
                FontWeight="Bold"
                Foreground="White"
                Background="ForestGreen"
                FontSize="15"
                FontFamily="Sitka Subheading"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="BtnRefresh_Click"/>

    </Grid>
</Page>